set nu      " number
set sw=4    " shiftwidth (indent width)
set ts=4    " tabstop key
set sts=4   " '\t' character
set si      " smartindent
set et      " expandtab (tab is replaced by space)
colo torte  " colorscheme theme_name

" setup CursorLine highlight style and enable CursorLine highlight
hi CursorLine   term=bold cterm=bold ctermbg=242
hi CursorLineNr term=bold cterm=bold ctermbg=242
set cul     " cursorline (hilight cursorline)

